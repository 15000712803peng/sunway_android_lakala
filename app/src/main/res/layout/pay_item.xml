<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/white_corner_dialog"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_orderno"
        android:text=""
        android:textSize="17dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColor="#919191"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_orderuser"
    android:text=""
    android:textSize="17dp"
    android:paddingLeft="6dp"
    android:paddingTop="6dp"
    android:textColor="#919191"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <LinearLayout
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:text="支付金额："
            android:textSize="17dp"

            android:textColor="#919191"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_orderamt"
            android:text="15.9元"
            android:textSize="19dp"

            android:textColor="#ff9700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />






    </LinearLayout>
    <View
       android:layout_margin="10dp"
        android:background="#c7c8cc"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/text_orderdesc"
        android:text=""
        android:textSize="17dp"
        android:paddingLeft="6dp"
        android:textColor="#919191"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"







































        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_card_pay"
            android:layout_marginLeft="28dp"
            android:background="@drawable/blue_shape"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="刷卡支付"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textSize="17dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textSize="17dp"
            android:gravity="center"
            android:id="@+id/btn_scan_pay"
            android:textColor="@android:color/white"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/orange_shape"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="扫描支付"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>