<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ll_sel_store"
    android:padding="15dp"
    android:background="@drawable/white_corner_dialog"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@mipmap/x"
        android:id="@+id/image_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_marginTop="38dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15dp"
            android:padding="8dp"
            android:id="@+id/text_stores"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sunway.lakala.view.MyList
            android:layout_marginTop="18dp"
            android:cacheColorHint="@android:color/transparent"
            android:layout_width="match_parent"
            android:id="@+id/list_store"
            android:layout_height="wrap_content"></com.sunway.lakala.view.MyList>

        <Button
            android:textSize="17dp"
            android:layout_marginTop="86dp"
            android:background="@drawable/login_btn"
            android:text="确认登录"
            android:id="@+id/btn_login"
            android:textColor="@android:color/white"
            android:layout_width="250dp"
            android:layout_height="36dp" />



    </LinearLayout>

</RelativeLayout>